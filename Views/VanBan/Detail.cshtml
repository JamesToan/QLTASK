                                                            <tr>
                                                                <td align="center" colspan="2">
                                                                    <span style="font-size: 9pt;" class="SubHead" id="dnn_ctr8091_Main_VanBan_ctl00_lbTrichYeu">
                                                                        Công văn số @vanban.SoKyHieu
                                                                    </span>
                                                                   
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td class="style1">
                                                                    Số văn bản:
                                                                </td>
                                                                <td>
                                                                    @vanban.SoKyHieu
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td class="style1">
                                                                    Trích yếu:
                                                                </td>
                                                                <td>
                                                                    @vanban.TrichYeu
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td class="style1">
