                                    <div class="cat-pane">
                                        <div class="cat-title">
                                            <span class="icon-news-top">
                                                <a href="">
                                                    LĨNH VỰC
                                                </a>
                                            </span>
                                        </div>
                                        <div class="cat-item" id="dnn_MenuCatalog">
                                            <div class="Invisible">
                                                <div class="self-catalog">
                                                    <ul>
                                                        @{
                                                            for (int i = 0; i < linhvuc.Count; i++)
                                                            {
                                                                <li id="@i">
                                                                    <a id="dnn_ctr535_ViewDocument_ctl00_rptCate_hplName_0" href="/VanBan/ListVanBan?lvID=@linhvuc[i].Id">@linhvuc[i].TenLinhVuc</a>
